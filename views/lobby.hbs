<div class="room-buttons">
  <button class="room-button" id="exit-button"><i class="fas fa-right-from-bracket fa-flip-horizontal"></i>Exit</button>
</div>

<h1 class="page-title">Mah-Jong Lobby</h1>

<div class="code-box">
  <div>Room code:</div>
  <div id="roomCode">{{roomCode}}</div>
  <button id="copy-code-button" class="copy-button" title="Copy to clipboard">
    <i class="fas fa-copy"></i>
  </button>
</div>

<div id="updating-lobby-content">
  {{> updatingLobbyContent players=players }}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/public/js/lobby.js"></script>