<div class="room-buttons">
  <a class="room-button" href="/"><i class="fas fa-right-from-bracket fa-flip-horizontal"></i>Exit</a>
</div>

<h1 class="page-title">Mah-Jong Room</h1>

<div class="code-box">
  <div>Room code:</div>
  <div id="roomCode">{{roomCode}}</div>
  <button id="copy-code-button" class="copy-button" title="Copy to clipboard">
    <i class="fas fa-copy"></i>
  </button>
</div>

<div class="grid-container">
  {{#each players}}
    {{> playerCard this}}
  {{/each}}
</div>

<script src="/public/js/room.js"></script>